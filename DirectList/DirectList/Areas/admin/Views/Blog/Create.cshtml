@model Blog
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">

            <form asp-area="Admin" asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.CreatedDate" class="form-label">CreatedDate</label>
                    <input class="form-control" asp-for="@Model.CreatedDate">
                    <span asp-validation-for="@Model.CreatedDate" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <textarea id="editor" class="form-control" asp-for="@Model.Content" rows="3"></textarea>

                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>



                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="Blog" asp-action="Index" class="btn btn-primary">Back to list</a>
            </form>
        </div>
    </div>
</div>

