@model MenuToRestaurant
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="MenuRestaurant" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="@Model.Spices" class="form-label">Spices</label>
                    <input class="form-control" asp-for="@Model.Spices" multiple>
                    <span asp-validation-for="@Model.Spices" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="@Model.Price" class="form-label">Price</label>
                    <input class="form-control" asp-for="@Model.Price">
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Menu.ProductName" class="form-label">Menu</label>
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.MenuId">
                        @foreach (var item in ViewBag.Menu)
                        {
                            <option value="@item.Id">@item.ProductName</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.Menu.ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Restaurant.Name" class="form-label">Restaurant</label>
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.RestaurantId">
                        @foreach (var item in ViewBag.Restaurant)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.Restaurant.Name" class="text-danger"></span>
                </div>




                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="MenuRestaurant" asp-action="Index">Back to list</a>
            </form>
                </div>
            </div>
        </div>


