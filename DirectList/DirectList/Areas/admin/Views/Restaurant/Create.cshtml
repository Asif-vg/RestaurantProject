@model Restaurant
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Restaurant" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="@Model.RestaurantImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.RestaurantImageFile" multiple>
                    <span asp-validation-for="@Model.RestaurantImageFile" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Address" class="form-label">Address</label>
                    <input class="form-control" asp-for="@Model.Address">
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.About" class="form-label">About</label>
                    <input class="form-control" asp-for="@Model.About">
                    <span asp-validation-for="@Model.About" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Phone1" class="form-label">Phone1</label>
                    <input type="tel" class="form-control" asp-for="@Model.Phone1">
                    <span asp-validation-for="@Model.Phone1" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Phone2" class="form-label">Phone2</label>
                    <input type="tel" class="form-control" asp-for="@Model.Phone2">
                    <span asp-validation-for="@Model.Phone2" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Phone3" class="form-label">Phone3</label>
                    <input type="tel" class="form-control" asp-for="@Model.Phone3">
                    <span asp-validation-for="@Model.Phone3" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.StartTime" class="form-label">StartTime</label>
                    <input class="form-control" asp-for="@Model.StartTime">
                    <span asp-validation-for="@Model.StartTime" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.EndTime" class="form-label">EndTime</label>
                    <input class="form-control" asp-for="@Model.EndTime">
                    <span asp-validation-for="@Model.EndTime" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="@Model.AddressLocation" class="form-label">AddressLocation</label>
                    <input class="form-control" asp-for="@Model.AddressLocation">
                    <span asp-validation-for="@Model.AddressLocation" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.LocationNote" class="form-label">LocationNote</label>
                    <textarea class="form-control" asp-for="@Model.LocationNote" rows="3"></textarea>
                    <span asp-validation-for="@Model.LocationNote" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Capacity" class="form-label">Capacity</label>
                    <input class="form-control" asp-for="@Model.Capacity">
                    <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Website" class="form-label">Website</label>
                    <input class="form-control" asp-for="@Model.Website">
                    <span asp-validation-for="@Model.Website" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.TagToRestaurantId" class="form-label">Tags</label>
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.TagToRestaurantId">
                        @foreach (var item in ViewBag.Tags)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.FeatureToRestaurantId" class="form-label">Feature</label>
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.FeatureToRestaurantId">
                        @foreach (var item in ViewBag.Feature)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="Restaurant" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>

